.chat-main__message--list
  .chat-main__message--list__box__top
    .chat-main__message--list__box__top__user-name
      = message.user.name
    .chat-main__message--list__box__top__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message--list__box__message
    - if message.body.present?
      %p.chat-main__message--list__box__message__body
        = message.body
    = image_tag message.image.url, class: 'chat-main__message--list__box__message__image' if message.image.present?
   
